<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    
    <!-- Tool packaging configuration -->
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>imagegen</ToolCommandName>
    <PackageId>ImageGenTool</PackageId>
    <Version>2.0.0</Version>
    <Authors>Sidoine De Wispelaere</Authors>
    <Description>A .NET tool for generating images using Google Gemini API</Description>
    <PackageTags>image-generation;gemini;google;ai;tool</PackageTags>
    <RepositoryUrl>https://github.com/Sidoine/ImageGenTool</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />
    <PackageReference Include="SixLabors.ImageSharp" Version="3.1.11" />
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="" />
  </ItemGroup>

</Project>
